{
    "name": "glaph/graphclass",
    "description": "Graphql implementation with classes",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/glaph/GraphClass",
    "require": {
        "php": "^8.1",
        "webonyx/graphql-php": "^14.11"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.10",
        "phpstan/phpstan": "^1.8"
    },
    "authors": [
        {
            "name": "David Lopez",
            "email": "daloalga2@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "GraphClass\\": "src/"
        }
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true
    }
}
